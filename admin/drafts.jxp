Drafts

<%

    var tab = new htmltable({
        ns: db.blog.drafts,
        cols: [
            { name: "title", isLink: true, searchWidth: 50 },
            { name: "name", isLink: true, heading: "Slug", searchWidth: 30 },
            { name: "ts", heading: "Saved"}
        ],
        detailUrl: "post_edit?id=",
        searchable: true
    });

    tab.dbview( tab.find().sort({ts:-1}) );

%>
